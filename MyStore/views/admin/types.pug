each item in items
  .col-md-9.col-sm-9.col-xs-12(style='margin-top: 10px;')
    li.list-group-item
      | Tên thể loại: #{item.nameType}
  .col-md-3.col-sm-3.col-xs-12(style='margin-top: 10px;')
    if (!updateTypeID)
      a.btn.btn-default(href='/admin/updateType/' + item.id) Cập nhật thể loại
    else
      form.form(action='/admin/updateType' method='post' accept-charset='utf-8' role='form')
        button.btn.btn-default(type='submit') Cập nhật thể loại
        input.form-control.input-md(name='nameType' style='margin-top: 10px; width: 137px;' required)
