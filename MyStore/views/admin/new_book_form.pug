doctype html
head
  title Thêm sách
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1')
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
  link(rel='stylesheet' type='text/css' href='/css/bootstrap.min.css')
  script(type='text/javascript' src='/js/jquery.min.js')
  script(type='text/javascript' src='/js/bootstrap.min.js')
  link(rel='stylesheet' type='text/css' href='/css/login.css')
  link(rel='shortcut icon' type='image/x-icon' href='/images/ic_book.png')
#wrap.container
  .row(style='margin-bottom: 15px;')
    .col-md-6.col-md-offset-3
      form.form(action='/admin/addBook' method='post' accept-charset='utf-8' role='form')
        legend Thêm sách
        input.form-control.input-lg(type='text' name='namebook' value='' placeholder='Tên sách' required)
        input.form-control.input-lg(type='number' name='price' value='' placeholder='Giá' required)
        input.form-control.input-lg(type='text' name='description' value='' placeholder='Mô tả' required)
        input.form-control.input-lg(type='text' name='origin' value='' placeholder='Xuất xứ' required)
        select.form-control.input-lg(name='typebook' required)
          each type in types
            option(value=type.id) #{type.nameType}
        select.form-control.input-lg(name='publishing_company' required)
          each company in companys
            option(value=company.id) #{company.nameCompany}
        input.form-control.input-lg(type='number' name='amount' value='' placeholder='Số lượng' required)
        input.form-control.input-lg(type='text' name='image' value='' placeholder='Đường dẫn hình ảnh' required)
        button.btn.btn-lg.btn-primary.btn-block.signup-btn(type='submit')
          | Thêm
