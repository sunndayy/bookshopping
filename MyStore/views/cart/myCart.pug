include ../layout/header.pug
.container-fluid
  .row.row-offcanvas.row-offcanvas-right
    .col-xs-12.col-sm-10.col-sm-push-2
      include ../layout/slide.pug
      section.group_cat_home#cart-page
        .container-fluid
          .row
            .group_title_1
              .row
                .col-md-4.col-sm-4.col-xs-12
                  h3.name-group
                    a.title-name-group(href='#' style='pointer-events: none;') Thông tin giỏ hàng
            .list_pro.cart_book
              include myCart_products.pug
            if (items.length > 0)
              .clearfix
              .viewmore-section
                ul#view_more_cart.pagination.pagination-lg.my-pagination
                  each page_number in page_numbers
                    if (page_number.isCurPage)
                      li
                        a.cart_page_number.cart_active_page(href='/cart/myCartPage/?myCartPage=' + page_number.value)
                          span= page_number.value
                    else
                      li
                        a.cart_page_number(href='/cart/myCartPage/?myCartPage=' + page_number.value)
                          span= page_number.value
                if (items.length > 0)
                  a.sumPrice(href='#' style='background: #fb005b; color: #fff; pointer-events: none;')
                    span Tổng giá tiền: #{price}
                      sup &dstrok;
                  br
                  a(href='/cart/payForm' style='background: #fb005b; color: #fff;')
                    span Thanh to&aacute;n
            else
              .clearfix
              .viewmore-section
                a.view_more(href='#' style='pointer-events: none; background: #fb005b; color: #fff;')
                  span
                    | Không có sản phẩm nào trong giỏ hàng của bạn
    include ../layout/sidebar.pug
include ../layout/footer.pug
